pipeline{
  agent any
  tools{
    maven 'Maven'
  }
  stages{
    stage("Test"){
      steps{
        //mvn test
        sh mvn --version
        echo "executing test"
      }
    }
    
    stage("build"){
      steps{
        //mvn package
        echo "executing build"
      }
    }
    
    stage("deploy to test"){
      steps{
        //deploy on container
        echo "executing deploy to test"
      }
    }
    
    stage("deploy to prod"){
      steps{
        //deploy on container
        echo "executing deploy to production"
      }
    }
  }
  post{
    always{
      echo "completed"
    }
  }
}
